<%- include('parts/head')%> <%- include('parts/navbar')%>

<div class="docMaterials  mb-5">
    <div class="container">
        <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Subject_Name</th>
                <th scope="col">Subject_Doc</th>
                <th scope="col">Download</th>
              </tr>
            </thead>
            <tbody>
                <% if(subjects && subjects.length){ %>
                    <% subjects.map((sub,i)=>{ %>
                            <tr style="font-size:1.3em; " >
                                <th><%= i+1 %></th>
                                <td><%= sub.subName %></td>
                                <td><%= sub.subDoc %></td>
                                <td>
                                <a class="download" href="/adminAbsence/<%= sub.subName %>" >
                                    <i class="fa-solid fa-download"></i> تنزيل الملف
                                </a>
                            </td>
                            </tr>
                    <% }) %>
                <% } %>
            </tbody>
          </table>
    </div>
</div>



<%- include('parts/footer')%>
